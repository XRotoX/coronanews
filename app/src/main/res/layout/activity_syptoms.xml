<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".syptoms">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/corona"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/mauxtete"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/fievre"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/gorge"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:text="Des maux de tête parfois intenses"
            android:textStyle="bold" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:text="la fièvre supérieure à 38,1°C"
            android:textStyle="bold" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="Un mal de gorge, comme une angine"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/toux"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/soufflecourt"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:text="une toux sèche ou grasse."
            android:textStyle="bold" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="Dyspnée et détresse respiratoire : les signes plus graves"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="25dp"
        android:gravity="center">
        <Button
            android:id="@+id/backsymp"
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:text="Retour"/>
    </LinearLayout>

</LinearLayout>