<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/logorm"
    tools:context=".MainActivity">
    <ImageView
        android:id="@+id/corona"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:src="@drawable/corona"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:text="Bienvenue dans notre application Corona News, ici vous trouverez toutes les infomrations et les nouveautés en relation avec la pandémie CoronaVirus"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:textStyle="bold" />
    <Button
    android:id="@+id/button1"
    android:layout_width="150dp"
    android:layout_height="60dp"
    android:layout_gravity="center"
    android:text="Nouveaux cas"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:text="Conseils et nouveautés"/>

    <Button
    android:id="@+id/button3"
    android:layout_width="150dp"
    android:layout_height="60dp"
    android:layout_gravity="center"
    android:text="S’identifier"/>




</LinearLayout>